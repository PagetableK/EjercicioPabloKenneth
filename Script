-- Procedimiento almacenado

-- Insertar tabla Cliente
CREATE PROCEDURE InsertarClientes(
    IN nombre VARCHAR(36),
    IN apellido VARCHAR(50),
    IN telefono VARCHAR(50),
    IN direccion VARCHAR(250)
)


    INSERT INTO clientes VALUES (UUID(), nombre, apellido, telefono, direccion);


-- Insertar tabla Empleados
CREATE PROCEDURE InsertarEmpleados(
    IN nombre VARCHAR(50),
    IN apellido VARCHAR(50),
    IN cargo VARCHAR(50),
    IN fecha_contratacion DATE,
    IN salario DECIMAL(10,2)
)
INSERT INTO empleados VALUES (UUID(), nombre, apellido, cargo, fecha_contratacion, salario);


-- Insertar tabla Pedidos
CREATE PROCEDURE InsertarPedidos(
    IN cliente_id  VARCHAR(36),
    IN fecha_pedido DATE,
    IN total DECIMAL(10,2),   
    IN empleado_id VARCHAR(36)
)

    INSERT INTO pedidos (pedido_id , cliente_id, fecha_pedido, total, empleado_id) VALUES (UUID(), cliente_id, fecha_pedido, total, empleado_id);

DROP PROCEDURE InsertarPedidos;

    -- Insertar tabla Productos
CREATE PROCEDURE InsertarProductos(
    IN nombre VARCHAR(100),
    IN descripcion VARCHAR(500),
    IN precio DECIMAL(10,2),
    IN existencias INT
)

    INSERT INTO productos VALUES (UUID(), nombre, descripcion, precio, existencias);


    -- Insertar tabla Productos
CREATE PROCEDURE InsertarDetallePedido(
    IN pedido_id VARCHAR(36),
    IN producto_id VARCHAR(36),
    IN cantidad INT,
    IN precio_unitario DECIMAL(10,2),
    IN subtotal DECIMAL(10,2)
)

INSERT INTO detalles_pedidos VALUES (UUID(), nombre, descripcion, precio, existencias);



CALL InsertarClientes('Pablo', 'Escobar', '8767-2442', 'Colombia medellin')
CALL InsertarEmpleados('Elmer', 'Rosales', 'Administrador', '2006-02-22', 366)

CALL InsertarPedidos('f2c13e47-d663-11ee-919f-7486e2204e75', '2009-12-05', 340.25, 'f5b34482-d663-11ee-919f-7486e2204e75')

CALL InsertarProductos('Pablo', 'Escobar', '8767-2442', 'Colombia medellin')
CALL InsertarDetallePedido('Pablo', 'Escobar', '8767-2442', 'Colombia medellin')

SELECT * FROM clientes;
SELECT * FROM empleados;
SELECT * FROM pedidos;
